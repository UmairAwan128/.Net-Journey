{
  "Logging": {
    "LogLevel": {
      "Default": "Warning"
    }
  },
  "AllowedHosts": "*",
  "MyKey": "Value of MyKey from appSettings.json",
  "ConnectionStrings": {
    "EmployeeDBConnection": "server=(localdb)\\MSSQLLocalDB;database=EmployeeDB;Trusted_Connection=true"
  }
  //"MSSQLLocalDB" is the name of server installed with VisualStudio if we want to use MSSQL server installed on pc use here that instance name
  //database=EmployeeDB is the name of the database and Trusted_Connection=true means for this DB use windows authentication inspite of SQLServer authentication
}
